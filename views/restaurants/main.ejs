<% layout('layout') %>

<div class="container mt-4">
    <h1 class="mb-4">음식점 목록</h1>
    
    <div class="row">
        <% restaurants.forEach(restaurant => { %>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <% if (restaurant.images && restaurant.images.length > 0) { %>
                        <img src="<%= restaurant.images[0].url %>" class="card-img-top" alt="<%= restaurant.name %>" style="height: 200px; object-fit: cover;" onerror="this.onerror=null;this.src='/images/default.jpg';">
                    <% } else { %>
                        <img src="/images/default.jpg" class="card-img-top" alt="No Image" style="height: 200px; object-fit: cover;">
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title"><%= restaurant.name %></h5>
                        <p class="card-text"><%= restaurant.cuisine %></p>
                        <p class="card-text">
                            <strong>평균 평점:</strong> 
                            <%= restaurant.averageRating %> / 5
                        </p>
                        <a href="/restaurants/<%= restaurant._id %>" class="btn btn-primary">자세히 보기</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <!-- 페이지네이션 -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                    <a class="page-link" href="/restaurants?page=<%= i %>"><%= i %></a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>