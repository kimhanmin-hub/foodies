<% layout('layout') %>

<div class="container mt-4">
    <h1>음식점 정보 수정</h1>
    <form action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="name" class="form-label">음식점 이름</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= restaurant.name %>" required>
        </div>
        <div class="mb-3">
            <label for="cuisine" class="form-label">요리 종류</label>
            <input type="text" class="form-control" id="cuisine" name="cuisine" value="<%= restaurant.cuisine %>" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">설명</label>
            <textarea class="form-control" id="description" name="description" rows="3" required><%= restaurant.description %></textarea>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">위치</label>
            <input type="text" class="form-control" id="location" name="location" value="<%= restaurant.location %>" required>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">새 이미지 추가</label>
            <input type="file" class="form-control" id="image" name="image" multiple>
        </div>
        <% if (restaurant.images && restaurant.images.length > 0) { %>
            <div class="mb-3">
                <label class="form-label">현재 이미지</label>
                <div class="row">
                    <% restaurant.images.forEach((img, i) => { %>
                        <div class="col-md-4 mb-2">
                            <img src="<%= img.url %>" class="img-thumbnail" alt="Restaurant image">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="deleteImages[]" value="<%= img.filename %>" id="image-<%= i %>">
                                <label class="form-check-label" for="image-<%= i %>">
                                    삭제
                                </label>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        <% } %>
        <button type="submit" class="btn btn-primary">수정</button>
        <a href="/restaurants/<%= restaurant._id %>" class="btn btn-secondary">취소</a>
    </form>
</div>